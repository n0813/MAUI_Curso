            <RowDefinition Height=".3*"/>

        </Grid.RowDefinitions>

            <Image >
                <Image.Source>
                    <FontImageSource FontFamily="Icons"
                                     Glyph="&#xF1B2;"
                                     Size="50"/>
                </Image.Source>
            </Image>

            <Label Grid.Row="1"
                   HorizontalTextAlignment="Center"
                   Text="Volumen"
                   TextColor="{StaticResource TextColor}"
                   VerticalTextAlignment="Center"
                   />



        </Grid>


        <!--#endregion-->

        <!--#region Length-->
             <Grid Grid.Row="1" Padding="15" Grid.Column="2"
                 Background="{StaticResource AppColor1}"                 
                 >

                    <Grid.RowDefinitions>
            <RowDefinition Height=".7*"/>
            <RowDefinition Height=".3*"/>

        </Grid.RowDefinitions>

            <Image >
                <Image.Source>
                    <FontImageSource FontFamily="Icons"
                                     Glyph="&#xF1B2;"
                                     Size="50"/>
                </Image.Source>
            </Image>

            <Label Grid.Row="1"
                   HorizontalTextAlignment="Center"
                   Text="Largo"
                   TextColor="{StaticResource TextColor}"
                   VerticalTextAlignment="Center"
                   />



        </Grid>

        <!--#endregion-->

        <!--#region masa-->
             <Grid Grid.Row="2" Padding="15" Grid.Column="0"
                 Background="{StaticResource AppColor2}"                 
                 >

                    <Grid.RowDefinitions>
            <RowDefinition Height=".7*"/>
            <RowDefinition Height=".3*"/>

        </Grid.RowDefinitions>

            <Image >
                <Image.Source>
                    <FontImageSource FontFamily="Icons"
                                     Glyph="&#xF1B2;"
                                     Size="50"/>
                </Image.Source>
            </Image>

            <Label Grid.Row="1"
